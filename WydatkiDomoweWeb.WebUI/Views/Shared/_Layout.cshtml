<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    @Scripts.Render("~/bundles/webScripts")
    @Styles.Render("~/Content/css")
    <title>@ViewBag.Title</title>
</head>
<body>
    <div class="container">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h2>
                    Wydatki Domowe</h2>
            </div>
            <ul class="nav nav-pills nav-justified">
                <li class="@(ViewContext.RouteData.Values["Controller"].ToString() == "Home" ? "active" : "")">
                    @Html.ActionLink("Główna", "Index", "Home")
                </li>
                <li class="@(ViewContext.RouteData.Values["Controller"].ToString() == "BillsNames" ? "active" : "")">
                    @Html.ActionLink("Rachunki", "Index", "BillsNames")
                </li>
                <li class="@(ViewContext.RouteData.Values["Controller"].ToString() == "Recipients" ? "active" : "")">
                    @Html.ActionLink("Odbiorcy", "Index", "Recipients")
                </li>
                <li class="@(ViewContext.RouteData.Values["Controller"].ToString() == "Charts" ? "active" : "")">
                    @Html.ActionLink("Zestawienia", "Index", "Charts")
                </li>
            </ul>
        </div>
        <div>
            @RenderBody()
        </div>
    </div>
</body>
</html>
