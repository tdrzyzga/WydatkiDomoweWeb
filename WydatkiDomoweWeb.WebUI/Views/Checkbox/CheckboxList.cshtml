@model WydatkiDomoweWeb.WebUI.Models.CheckboxListViewModel

@using (Html.BeginForm("CheckboxList", "Checkbox", FormMethod.Post, new { checkboxListviewModel = Model}))
{
    <div>
       

        @for (int i = 0; i < Model.CheckboxItems.Count(); i++ )
        {
            <label class="custom-control custom-checkbox">                         
                @Html.CheckBoxFor(m => Model.CheckboxItems[i].IsChecked)                
                @Html.HiddenFor(m => Model.CheckboxItems[i].Name)             
                @Html.DisplayFor(m => Model.CheckboxItems[i].Name) 
                          
            </label>
        }
        <input type="hidden" id="buttonvalue"/>
        <input class = "btn btn-default" type="submit" value="Filtruj" /> 
    </div>
}