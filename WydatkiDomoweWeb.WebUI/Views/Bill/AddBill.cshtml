@model WydatkiDomoweWeb.WebUI.Models.CreationBillViewModel


@using (Html.BeginForm("AddBill", "Bill", FormMethod.Post, new { @class = "form-inline" }))
{
    <div class="form-group form-group-sm">
        @Html.DropDownListFor(m => m.SelectedBillId, new SelectList(Model.Bills, "Id", "Name", "Date"), "Wybierz rachunek", new { @class = "form-control" })
        @for (int i = 0; i < Model.Bills.Count(); i++)
        {
            @Html.HiddenFor(m => m.Bills[i].Name)
            @Html.HiddenFor(m => m.Bills[i].Id)
            @Html.HiddenFor(m => m.Bills[i].Date)
        }
    </div>
     <div class="form-group form-group-sm">
        @Html.DropDownListFor(m => m.SelectedRecipientId, new SelectList(Model.Recipients, "Value", "Text"), "Wybierz odbiorcę", new { @class = "form-control" })
        @for (int i = 0; i < Model.Recipients.Count(); i++)
        {
            @Html.HiddenFor(m => m.Recipients[i].Text)
            @Html.HiddenFor(m => m.Recipients[i].Value)
        }
    </div>
    <div class="form-group form-group-sm">
        @Html.TextBoxFor(m => m.Amount, "Kwota", new { @class = "form-control" })
    </div>
    <div style="position:relative" class="form-group form-group-sm">
        @Html.TextBoxFor(m => m.PaymentDate, new { @class = "form-control", id = "datetimepicker" })       

    </div>
    <div class="form-group form-group-sm">
        @Html.TextBoxFor(m => m.RequiredDate, "Termin zapłaty", new { @class = "form-control" })
    </div>
    <div class="form-group form-group-sm">
        <input type="hidden" id="buttonvalue" />
        <input class="btn btn-primary" type="submit" value="Dodaj nowy rachunek" />
    </div>
        
}
