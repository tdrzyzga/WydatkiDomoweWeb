@using WydatkiDomoweWeb.Domain.Entities
@model IEnumerable<Bill>


@{
    ViewBag.Title = "Rachunki";
}

<div class="panel panel-default">
    <div class="panel-body">
        <table class="table table-striped table-condensed table-bordered">
            <tr>
                <th>Rachunek</th>
                <th>Odbiorca</th>
                <th class="NumericCol">Cena</th>
                <th>Akcja</th>
            </tr>
            @foreach (var bill in Model)
            {
                <tr>
                    <td>@bill.BillNameID</td>
                    <td>@bill.RecipientID</td>
                    <td>@bill.Amount</td>
                    <td>
                        @using (Html.BeginForm("Delete", "Admin"))
                        {
                            <input type="submit" value="Usuń" />
                        }
                    </td>
                </tr>
            }
        </table>
    </div>
    <div class="panel-footer">
        @Html.ActionLink("Dodaj nowy produkt", "Usuń", null, new { @class = "btn btn-default" })
    </div>
</div>

