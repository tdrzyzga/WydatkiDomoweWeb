@using WydatkiDomoweWeb.Domain.Entities
@model WydatkiDomoweWeb.WebUI.Models.BillViewModel


@{
    ViewBag.Title = "Rachunki";
}

<div class="panel panel-default">
    <div class="panel panel-body">
        @Html.Action("Checkbox")
    </div>
    <div class="panel-body">
        <table class="table table-striped table-condensed table-bordered">
            <tr>
                <th>Rachunek</th>
                <th>Odbiorca</th>
                <th>Cena</th>
                <th>Data wpłaty</th>
                <th>Termin zapłaty</th>
                <th>Akcja</th>
            </tr>
            @foreach (var bills in Model.Bills)
            {
                <tr>
                    <td>@Html.DisplayFor(m => bills.BillName)</td>
                    <td>@Html.DisplayFor(m => bills.Recipient)</td>
                    <td>@Html.DisplayFor(m => bills.Amount)</td>
                    <td>@Html.DisplayFor(m => bills.PaymentDate)</td>
                    <td>@Html.DisplayFor(m => bills.RequiredDate)</td>
                    <td>
                        @using (Html.BeginForm("DeleteBill", "CrudBill"))
                        {
                            @Html.Hidden("Id", bills.Id)
                            <input class = "btn btn-default btn-xs" type="submit" value="Usuń" />
                        }
                    </td>
                </tr>
            }
        </table>
        <div class="btn-group pull-right">
            @Html.PageLinks(Model.PagingInfo, x => Url.Action("Index", new { page = x }))
        </div>
    </div>

    <div class="panel-footer">
        @Html.Action("AddBill", "CrudBill")
    </div> 
    <script type="text/javascript">
        $(function () {
            $('#selectBill').change(function () {
                var value = $('#selectBill').val();

                if (value !== "") {
                    var date = $('#' + value).val();
                    date = date.split(' ');
                    date = date[0].split('-');
                    var correctDate = date[2] + "." + date[1] + "." + date[0];

                    $('#datetimepicker').datetimepicker({
                        locale: 'pl'               
                    });
                    $('#datetimepicker').val('Data wpłaty');

                    $('#requiredDate').val(correctDate);
                }
                else {
                    $('#datetimepicker').val('Data wpłaty');
                    $('#requiredDate').val('Termin zapłaty');
                }
            });
        })
    </script>
</div>

