@using WydatkiDomoweWeb.Domain.Entities
@model WydatkiDomoweWeb.WebUI.Models.BillViewModel


@{
    ViewBag.Title = "Rachunki";
}

<div class="panel panel-default">
    <div class="panel panel-body">
        @Html.Action("Checkbox")
    </div>
    <div class="panel-body">
        <table class="table table-striped table-condensed table-bordered">
            <tr>
                <th>Rachunek</th>
                <th>Odbiorca</th>
                <th>Cena</th>
                <th>Data wpłaty</th>
                <th>Termin zapłaty</th>
                <th>Akcja</th>
            </tr>
            @foreach (var b in Model.Bills)
            {
                <tr>
                    <td>@Html.DisplayFor(m => b.BillName)</td>
                    <td>@Html.DisplayFor(m => b.Recipient)</td>
                    <td>@Html.DisplayFor(m => b.Amount)</td>
                    <td>@Html.DisplayFor(m => b.PaymentDate)</td>
                    <td>@Html.DisplayFor(m => b.RequiredDate)</td>
                    <td>
                        @using (Html.BeginForm("Delete", "Admin"))
                        {
                            <input class = "btn btn-default btn-xs" type="submit" value="Usuń" />
                        }
                    </td>
                </tr>
            }
        </table>
        <div class="btn-group pull-right">
            @Html.PageLinks(Model.PagingInfo, x => Url.Action("Index", new { page = x }))
        </div>
    </div>

    <div class="panel-footer">
        @Html.Action("AddBill", "Bill")
    </div> 
    <script type="text/javascript">
        $(function () {
            $('#datetimepicker').datetimepicker({ locale: 'pl' });
            $('#selectBill').change(function () {
                var value = $('#selectBill').val();
                var date = $('#' + value).val();
                date = date.split(' ');
                date = date[0].split('-');
                var correctDate = date[2] + "." + date[1] + "." + date[0];
                $('#requiredDate').val(correctDate);
            });
        })
    </script>
</div>

