@model WydatkiDomoweWeb.WebUI.Models.BillsViewModel

@if (TempData["ChangedBill"] != null) 
{
    <div class="alert alert-success">@TempData["ChangedBill"]</div>
}
 <table class="table table-striped table-condensed table-bordered table-getbill">
    <tr>
        <th class="col-md-2">Rachunek</th>
        <th class="col-md-2">Odbiorca</th>
        <th class="col-md-1">Cena</th>
        <th class="col-md-2">Data wpłaty</th>
        <th class="col-md-2">Termin zapłaty</th>
        <th class="col-md-1">Akcja</th>
    </tr>


    @foreach (var bill in Model.Bills)
    {
        <tr>
            <td>@Html.DisplayFor(m => bill.BillName)</td>
            <td>@Html.DisplayFor(m => bill.Recipient)</td>
            <td>@Html.DisplayFor(m => bill.Amount)</td>
            <td>@Html.DisplayFor(m => bill.PaymentDate)</td>
            <td>@Html.DisplayFor(m => bill.RequiredDate)</td>
            <td class="form-inline">                    
                @using (Ajax.BeginForm("EditBill", "CrudBills", null, new AjaxOptions { UpdateTargetId = "addBill", HttpMethod = "Get", OnSuccess = "setDefaultDateTimePicker(\"paymentDate\")" }, new { @class = "form-group" }))
                {
                    @Html.Hidden("BillId", bill.Id)
                    <input class="btn btn-default btn-xs" type="submit" value="Edytuj" />
                }
                <button class="btn btn-default btn-xs" data-toggle="modal" data-target="#@("modal" + bill.Id)">Usuń</button>                
                
                <div id="@("modal" + bill.Id)" class="modal fade" role="dialog">                
                    <div class="modal-dialog modal-sm">
                        <!-- Modal content-->
                        <div class="modal-content">
                            <div class="modal-header">
                                <button type="button" class="close" data-dismiss="modal">&times;</button>
                                <h3 class="modal-title">Usuwanie rachunku</h3>
                            </div>
                            <div class="modal-body">
                                <p>Chcesz usunąć element @bill.BillName?</p>
                            </div>
                            <div class="modal-footer">
                                @using (Ajax.BeginForm("DeleteBill", "CrudBills", null, new AjaxOptions { UpdateTargetId = "billsTable", OnSuccess = "hideModal()" }, new { @class = "form-group" }))
                                {
                                    @Html.Hidden("BillId", bill.Id)
                                    @Html.Hidden("BillName", bill.BillName)
                                    <input class="btn btn-primary" type="submit" value="Usuń" />
                                }
                                <button type="button" class="btn btn-default" data-dismiss="modal">Anuluj</button>
                            </div>
                        </div>
                    </div>
                </div>

            </td>
        </tr>
    }
 </table>
<div class="btn-group pull-right">
    @Html.PageLinks(Model.PagingInfo, x => Url.Action("GetBills", new { page = x }), new AjaxOptions { UpdateTargetId = "billsTable" })
</div>

